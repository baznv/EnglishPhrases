<Window x:Class="EnglishPhrases.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishPhrases"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AddPhrases" Content="Добавить фразы" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Click="AddPhrases_Click" Margin="15" FontSize="18"/>
            <Button x:Name="AddWords" Content="Добавить слова" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Margin="15" FontSize="18" Click="AddWords_Click" />
            <Button Content="Начать тренировку" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Margin="15" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>
