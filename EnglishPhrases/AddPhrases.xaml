<Window x:Class="EnglishPhrases.AddPhrases"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishPhrases"
        mc:Ignorable="d"
        Title="AddPhrases" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="Phrase" Height="60" Margin="15" Padding="10,5" TextWrapping="Wrap"/>
        <TextBlock x:Name="Transcription" Height="40" Margin="15" Padding="10,5" TextWrapping="Wrap"/>
        <TextBox x:Name="Translate" Height="60" Margin="15" Padding="10,5" TextWrapping="Wrap"/>
        <Button x:Name="AddWord" Content="AddWord" Height="40" FontSize="18" Width="175" HorizontalAlignment="Right" Margin="10" Click="Temp_Click" />
    </StackPanel>
</Window>
