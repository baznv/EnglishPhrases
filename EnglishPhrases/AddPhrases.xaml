<Window x:Class="EnglishPhrases.AddPhrases"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishPhrases"
        mc:Ignorable="d"
        Title="AddPhrases" Height="450" Width="800">
    <StackPanel Background="LightGray">
        <TextBox x:Name="PhraseTb" Height="Auto" Margin="15" Padding="10,5" TextWrapping="Wrap"  TextChanged="PhraseTb_TextChanged" PreviewKeyDown="PhraseTb_PreviewKeyDown" />
        <TextBlock x:Name="TranscriptionTbl" Height="Auto" Margin="15" Padding="10,5" TextWrapping="Wrap"/>
        <TextBox x:Name="TranslateTb" Height="Auto" Margin="15" Padding="10,5" TextWrapping="Wrap"/>
        <Button x:Name="SaveSentenceBtn" Content="Save Sentence" Height="40" FontSize="18" Width="175" HorizontalAlignment="Center" Margin="10" />
    </StackPanel>
</Window>
