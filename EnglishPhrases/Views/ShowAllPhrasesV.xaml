<UserControl x:Class="EnglishPhrases.Views.ShowAllPhrasesV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishPhrases.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding ListPhrases}" ColumnWidth="auto" HorizontalAlignment="Center" CanUserAddRows="True" RowBackground="#E8E9F0"
                  AlternatingRowBackground="#FFF9EB">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True" />
                <DataGridTextColumn Header="English" Binding="{Binding EnglishPhrase}"/>
                <DataGridTextColumn Header="Sound" Binding="{Binding PathToSound}"/>
                <!--<DataGridTemplateColumn Header="Birthday">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Birthday}" BorderThickness="0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->
                <DataGridTextColumn Header="Russian" Binding="{Binding RussianPhrase}" />
                <DataGridTextColumn Header="Date Add" Binding="{Binding DateAdd}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Count" Binding="{Binding CountShow}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Right" Binding="{Binding CountRightAnswer}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Percent Right" Binding="{Binding PercentRight}" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Show" Binding="{Binding IsShow}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
